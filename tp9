class Juego:
    def __init__(self, nombre, genero, precio):
        self._nombre = nombre
        self._genero = genero
        self._precio = precio
    def mostrar_informacion(self):
        print("Juego:", self._nombre)
        print("Género:", self._genero)
        print("Precio: $", self._precio)
    def esta_en_oferta(self, limite):
        if self._precio < limite:
            print(self._nombre + " está en oferta!")
        else:
            print(self._nombre + " no está en oferta.")    
