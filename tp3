class CuentaBancaria:
    def __init__(self, titular, saldo, numero_cuenta):
        if saldo >= 0:
            self._saldo = saldo
        else:
            self._saldo = 0
        self._titular = titular
        self._numero_cuenta = numero_cuenta
    def depositar(self, cantidad):
        if cantidad > 0:
            self._saldo = self._saldo + cantidad
        else:
            print("La cantidad a depositar debe ser mayor que 0.")
    def retirar(self, cantidad):
        if cantidad > 0 and cantidad <= self._saldo:
            self._saldo = self._saldo - cantidad
        else:
            print("Cantidad invÃ¡lida o saldo insuficiente.")
    def mostrar_info(self):
        print("Titular:", self._titular)
        print("Saldo:", self._saldo)
        print("NÃºmero de cuenta:", self._numero_cuenta)
