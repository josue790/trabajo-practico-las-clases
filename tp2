class Persona:
    def __init__(self, nombre, edad, sexo):
        self._nombre = nombre
        if edad >= 0:
            self._edad = edad
        else:
            self._edad = 0
        self._sexo = sexo
    def set_edad(self, edad):
        if edad >= 0:
            self._edad = edad
        else:
            print("Edad no v√°lida.")
    def mostrar_info(self):
        print("Nombre:", self._nombre)
        print("Edad:", self._edad)
        print("Sexo:", self._sexo)
