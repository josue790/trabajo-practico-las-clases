class Estudiante:
    def __init__(self, nombre, edad):
        self._nombre = nombre
        self._edad = edad
        self._notas = []
    def agregar_nota(self, nota):
        if 0 <= nota <= 100:
            self._notas = self._notas + [nota]
    def promedio(self):
        return sum(self._notas) / len(self._notas) if self._notas else 0
    def mostrar_info(self):
        print("Nombre:", self._nombre)
        print("Edad:", self._edad)
        print("Promedio:", self.promedio())

