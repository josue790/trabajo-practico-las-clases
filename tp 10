class Circulo:
    def __init__(self, radio):
        if radio >= 0:
            self._radio = radio
        else:
            self._radio = 0
    def get_radio(self):
        return self._radio
    def set_radio(self, radio):
        if radio >= 0:
            self._radio = radio
        else:
            print("Radio no v√°lido.")
    def calcular_area(self):
        return 3 * self._radio * self._radio
    def calcular_circunferencia(self):
        return 2 * 3 * self._radio
